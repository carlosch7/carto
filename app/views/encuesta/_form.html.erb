<%= form_for(@encuestum) do |f| %>
  <% if @encuestum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@encuestum.errors.count, "error") %> prohibited this encuestum from being saved:</h2>

      <ul>
      <% @encuestum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <h3></h3>
    
    <div class="col-xs-5 center-block" style="float:none"> 
    <div class="form-group">
    
    <%= f.text_field :direccion, class:"span4",placeholder:".Direccion" %> 
    
    <%= f.text_field :telefono, placeholder:".telefono" %>
    <% viviendas = {'Vivienda_tipo' =>'Vivienda_tipo', 'casa' => 'casa','apartamento' =>'apartamento','casa lote' =>'casa lote','finca'=>'finca'} %>
    <% lista = viviendas.sort %>
    <%= f.select :tipo_vivienda, lista, :selected => 'Vivienda_tipo' %>
    <% est = {'Estrato' => 'Estrato','uno' => '1','dos' =>'2','tres' =>'3','cuatro'=>'4'} %>
    <% nume = est.sort %>
    <%= f.select :estrato,nume, :selected => 'Estrato' %>
   </div>
    
  
  
      
    <%= f.label :Tiene_servicios_incluidos? %>
    <%= f.check_box :servicios %><br>
    <%= f.label :Cuales %>
    <%= f.text_area :tipo_servicios, :cols =>100, rows: 4 %><br>
    <div class="form-group">
     <%= f.text_field :habitaciones, placeholder:" # de habitaciones" %>
     <% pisos = {'Tipo de Pisos' =>'Tipo de Pisos', 'Tierra,Arena' => 'Tierra,Arena','Cemento,gravilla' =>'Cemento,gravilla','Madera' =>'Madera ','Baldosa'=>'Baldosa'} %>
    <% pis = pisos.sort %>
     <%= f.select :piso_vivienda,pis,:selected =>'Tipo de Pisos' %>
     <% pared = {'Tipo de Paredes' =>'Tipo de Paredes', 'Ladrillo' => 'Ladrillo','Madera' =>'Madera','Adobe,Bahareque' =>'Adobe,Bahareque ','Guadua'=>'Guadua','Zinc'=>'Zinc'} %>
    <% par = pared.sort %>
     <%= f.select :paredes_vivienda,par,:selected => 'Tipo de Paredes' %>
     <% basura = {'Control de Basuras' =>'Control de Basuras', 'Reciclan' => 'Reciclan','Recoleccion Publica' =>'Recoleccion Publica','Se arroja a un rio o Quebrada' =>'Se arroja a un rio o Quebrada ','Se Quema'=>'Se Quema'} %>
    <% bas = basura.sort %>
     <%= f.select :basuras,bas,:selected => 'Control de Basuras' %>
  </div>
    <br>
     <%= f.submit "siguiente", class: "btn btn-primary"  %>
   

  </div>
  
<% end %>